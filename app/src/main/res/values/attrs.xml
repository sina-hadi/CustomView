<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DoubleImageView">
        <attr name="android:drawableLeft" />
        <attr name="android:drawableRight" />
        <attr name="android:text" />
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="android:spacing" />
    </declare-styleable>

    <declare-styleable name="BoxGridLayout">
        <attr name="separatorWidth" format="dimension" />
        <attr name="separatorColor" format="color" />
        <attr name="numColumns" format="integer" />
    </declare-styleable>

    <declare-styleable name="ButtonBuzzer" >
        <attr name="buzzerColor" format="color"/>
        <attr name="stroke_buzzerColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="Shapes" >
        <attr name="square_color" format="color"/>
        <attr name="square_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="EmotionalFaceView">
        <!--2-->
        <attr name="faceColor" format="color" />
        <attr name="eyesColor" format="color" />
        <attr name="mouthColor" format="color" />
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="state" format="enum">
            <enum name="happy" value="0" />
            <enum name="sad" value="1" />
        </attr>
    </declare-styleable>
</resources>